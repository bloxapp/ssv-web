{
  "files.associations": {
    ".eslintrc": "jsonc",
    ".stylelintrc": "json",
    ".dockerignore": "ignore",
    ".eslintignore": "ignore"
  },

  "javascript.validate.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,

  "search.exclude": {
    ".eslintcache": true,
    ".git": true,
    "*.{css,sass,scss}.d.ts": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "yarn.lock": true
  },
  "cSpell.words": [
    "holesky",
    "ssvweb",
    "Wagmi"
  ]
}
